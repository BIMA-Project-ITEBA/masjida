<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="masjida_help_request_list" model="ir.ui.view">
        <field name="name">masjida.help.request.list</field>
        <field name="model">masjida.help.request</field>
        <field name="arch" type="xml">
            <list string="Areas">
                <field name="user_id"/>
                <field name="help_type_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ACTIONS: Permintaan Bantuan -->
    <record id="action_masjida_help_request" model="ir.actions.act_window">
        <field name="name">Permintaan Bantuan</field>
        <field name="res_model">masjida.help.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada permintaan bantuan.
            </p>
        </field>
    </record>

    <!-- ACTIONS: Jenis Bantuan -->
    <record id="action_masjida_help_type" model="ir.actions.act_window">
        <field name="name">Jenis Bantuan</field>
        <field name="res_model">masjida.help.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan jenis bantuan baru.
            </p>
        </field>
    </record>

    <!-- MENUS -->
    <menuitem id="menu_masjida_help_root"
              name="Bantuan"
              parent="menu_masjida_root" 
              sequence="50"/>

    <menuitem id="menu_masjida_help_request"
              name="Daftar Permintaan"
              parent="menu_masjida_help_root"
              action="action_masjida_help_request"
              sequence="10"/>

    <menuitem id="menu_masjida_help_type"
              name="Konfigurasi Jenis Bantuan"
              parent="menu_masjida_help_root"
              action="action_masjida_help_type"
              sequence="20"
              groups="base.group_system"/>

    <menuitem id="menu_sermon_root"
        name="Sermon Management"
        sequence="10"/>

    <menuitem id="menu_sermon_master_data"
        name="Master Data"
        parent="menu_sermon_root"
        sequence="10"/>

    <menuitem id="menu_sermon_schedules_main"
        name="Schedules (Jadwal)"
        parent="menu_sermon_root"
        sequence="20"/>

    <menuitem id="menu_sermon_content_main"
        name="Content (Konten)"
        parent="menu_sermon_root"
        sequence="30"/>
</odoo>
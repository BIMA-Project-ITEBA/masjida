<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sermon_content_list" model="ir.ui.view">
        <field name="name">sermon.content.list</field>
        <field name="model">sermon.content</field>
        <field name="arch" type="xml">
            <list string="Sermon Content">
                <field name="name"/>
                <field name="preacher_id"/>
                <field name="content_type"/>
                <field name="publish_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_sermon_content_form" model="ir.ui.view">
        <field name="name">sermon.content.form</field>
        <field name="model">sermon.content</field>
        <field name="arch" type="xml">
            <form string="Sermon Content">
                <header>
                    <button name="action_publish" string="Publish" type="object" class="btn-primary" invisible="state !='draft'"/>
                    <button name="action_unpublish" string="Unpublish" type="object" invisible="state != 'published'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Content Title..."/></h1>
                    </div>
                    <group>
                        <field name="preacher_id"/>
                        <field name="content_type"/>
                    </group>
                    <notebook>
                        <page string="Content Details">
                            <field name="content_text" widget="html" invisible="content_type != 'text'"/>
                            <field name="image_content" widget="image" class="oe_max_height" invisible="content_type != 'image'"/>
                            <field name="video_url" widget="url" placeholder="e.g. https://www.youtube.com/watch?v=..." invisible="content_type != 'video'"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sermon_content" model="ir.actions.act_window">
        <field name="name">Sermon Content</field>
        <field name="res_model">sermon.content</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_action_sermon_content"
        action="action_sermon_content"
        parent="menu_sermon_content_main"
        sequence="10"/>
</odoo>
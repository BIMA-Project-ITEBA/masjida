<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mosque_board_list" model="ir.ui.view">
        <field name="name">mosque.board.list</field>
        <field name="model">mosque.board</field>
        <field name="arch" type="xml">
            <list string="Board Members">
                <field name="name"/>
                <field name="position"/>
                <field name="mosque_id"/>
                <field name="email"/>
                <field name="user_id" optional="show"/>
                <field name="phone" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_mosque_board_form" model="ir.ui.view">
        <field name="name">mosque.board.form</field>
        <field name="model">mosque.board</field>
        <field name="arch" type="xml">
            <form string="Board Member">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="position"/>
                        <field name="phone"/>
                        <!-- Jadikan email required, karena akan jadi basis login -->
                        <field name="email" required="1" widget="email"/>
                        <field name="mosque_id" context="{'default_mosque_id': mosque_id}"/>
                        <field name="user_id" readonly="1" force_save="1"
                            help="Akun pengguna akan otomatis ter-link atau dibuat berdasarkan Email yang dimasukkan."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mosque_board" model="ir.actions.act_window">
        <field name="name">Board Members</field>
        <field name="res_model">mosque.board</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_action_mosque_board"
        action="action_mosque_board"
        parent="menu_sermon_master_data"
        sequence="15"/>

    <!-- 
        XML berikut ini (yang Anda komentari) sudah benar. 
        Ini akan menggantikan tab 'Admins' (jika ada) di form Masjid 
        dengan tab 'Board Members' yang inline.
    -->
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mosque_board_tree" model="ir.ui.view">
        <field name="name">mosque.board.tree</field>
        <field name="model">mosque.board</field>
        <field name="arch" type="xml">
            <tree string="Board Members">
                <field name="name"/>
                <field name="position"/>
                <field name="mosque_id"/>
                <field name="user_id"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_mosque_board_form" model="ir.ui.view">
        <field name="name">mosque.board.form</field>
        <field name="model">mosque.board</field>
        <field name="arch" type="xml">
            <form string="Board Member">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="position"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="mosque_id"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mosque_board" model="ir.actions.act_window">
        <field name="name">Board Members</field>
        <field name="res_model">mosque.board</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_action_mosque_board"
        action="action_mosque_board"
        parent="menu_sermon_master_data"
        sequence="15"/>

    <record id="view_mosque_mosque_form_inherit_board" model="ir.ui.view">
        <field name="name">mosque.mosque.form.inherit.board</field>
        <field name="model">mosque.mosque</field>
        <field name="inherit_id" ref="masjida.view_mosque_mosque_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@string='Admins']" position="replace">
                <page string="Board Members">
                    <field name="board_member_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="position"/>
                            <field name="user_id"/>
                            <field name="phone"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_preacher_preacher_list" model="ir.ui.view">
        <field name="name">preacher.preacher.list</field>
        <field name="model">preacher.preacher</field>
        <field name="arch" type="xml">
            <list string="Preachers">
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_preacher_preacher_form" model="ir.ui.view">
        <field name="name">preacher.preacher.form</field>
        <field name="model">preacher.preacher</field>
        <field name="arch" type="xml">
            <form string="Preacher">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Preacher Name..."/></h1>
                        <h3><field name="specialization" placeholder="Specialization..."/></h3>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Biography">
                            <field name="bio"/>
                        </page>
                        <page string="Schedules">
                            <field name="schedule_ids" readonly="1"/>
                        </page>
                         <page string="Proposals">
                            <field name="proposal_ids" readonly="1"/>
                        </page>
                        <page string="Content">
                            <field name="content_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_preacher_preacher" model="ir.actions.act_window">
        <field name="name">Preachers</field>
        <field name="res_model">preacher.preacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_action_preacher"
        action="action_preacher_preacher"
        parent="menu_sermon_master_data"
        sequence="20"/>
</odoo>
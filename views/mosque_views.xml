<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mosque_mosque_list" model="ir.ui.view">
        <field name="name">mosque.mosque.list</field>
        <field name="model">mosque.mosque</field>
        <field name="arch" type="xml">
            <list string="Mosques">
                <field name="name"/>
                <field name="city"/>
                <field name="province"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="view_mosque_mosque_form" model="ir.ui.view">
        <field name="name">mosque.mosque.form</field>
        <field name="model">mosque.mosque</field>
        <field name="arch" type="xml">
            <form string="Mosque">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Mosque Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="province" placeholder="Province" class="o_address_state"/>
                                <field name="zip_code" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Profile &amp; Description">
                            <field name="description" placeholder="Add the mosque's profile and other details here..."/>
                        </page>
                        <page string="Schedules">
                            <field name="schedule_ids" readonly="1">
                                <list>
                                    <field name="topic"/>
                                    <!-- <field name="preacher_id"/> -->
                                    <field name="start_time"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                         <!-- <page string="Admins">
                            <field name="admin_ids" widget="many2many_tags"/>
                        </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mosque_mosque" model="ir.actions.act_window">
        <field name="name">Mosques</field>
        <field name="res_model">mosque.mosque</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_action_mosque"
        action="action_mosque_mosque"
        parent="menu_sermon_master_data"
        sequence="10"/>
</odoo>